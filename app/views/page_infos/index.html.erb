<p id="notice"><%= notice %></p>

<h1>Page Infos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Locale</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_infos.each do |page_info| %>
      <tr>
        <td><%= page_info.name %></td>
        <td><%= page_info.locale %></td>
        <td><%= page_info.content %></td>
        <td><%= link_to 'Show', page_info %></td>
        <td><%= link_to 'Edit', edit_page_info_path(page_info) %></td>
        <td><%= link_to 'Destroy', page_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

